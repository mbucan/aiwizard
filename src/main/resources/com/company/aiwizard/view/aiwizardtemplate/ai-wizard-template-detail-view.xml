<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://AIWizardTemplateDetailView.title"
      focusComponent="form">
    <data>
        <instance id="aIWizardTemplateDc"
                  class="com.company.aiwizard.entity.AIWizardTemplate">
            <fetchPlan extends="_base"/>
            <loader id="aIWizardTemplateDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="aIWizardTemplateDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="descriptionField" property="description"/>
            <select id="connectionField" property="connection"/>
            <select id="operationField" property="operation"/>
            <select id="datasetTypeField" property="datasetType"/>
            <textArea id="contextPrefixField" height="9.5em" property="contextPrefix"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
